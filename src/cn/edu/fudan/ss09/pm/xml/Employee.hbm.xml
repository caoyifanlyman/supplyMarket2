<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class table="Employee" name="cn.edu.fudan.ss09.pm.entity.Employee">
		<id column="employeeId" name="employeeId" type="java.lang.Integer">
			<generator class="identity" />
		</id>
		<property column="name" name="name" type="java.lang.String" />
		<property column="gender" name="gender" type="java.lang.Integer" />
		<property column="email" name="email" type="java.lang.String" />
	</class>
</hibernate-mapping>  

<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class table="UserInfo" name="cn.edu.fudan.ss09.pm.entity.UserInfo">
		<id column="username" name="username" type="java.lang.String">
			<generator class="assigned" />
		</id>
		<property column="employeeId" name="employeeId" type="java.lang.Integer" />
		<property column="password" name="password" type="java.lang.String" />
		<property column="privilege" name="privilege" type="java.lang.Integer" />
	</class>
</hibernate-mapping>  

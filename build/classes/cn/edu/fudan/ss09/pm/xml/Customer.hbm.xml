<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class table="Customer" name="cn.edu.fudan.ss09.pm.entity.Customer">
		<id column="customerId" name="customerId" type="java.lang.Integer">
			<generator class="identity" />
		</id>
		<property column="employeeId" name="employeeId" type="java.lang.Integer" />
		<property column="customerName" name="customerName" type="java.lang.String" />
		<property column="customerGender" name="customerGender" type="java.lang.Integer" />
		<property column="customerEmail" name="customerEmail" type="java.lang.String" />
		<property column="customerPhone" name="customerPhone" type="java.lang.String" />
		<property column="customerAddress" name="customerAddress" type="java.lang.String" />
		
	</class>
</hibernate-mapping>  
<!--    customerId           char(8) not null,
   employeeId           char(8) not null,
   customerName         varchar(20) not null,
   customerGender       int not null,
   customerEmail        varchar(100) not null,
   customerPhone        varchar(30) not null,
   customerAddress      varchar(200) not null,
   primary key (customerId)
    -->